{
  "name": "app",
  "version": "1.0.0",
  "description": "Desktop app",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron ./dist/main.js",
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "serve": "npm run build && npm run make-self"
  },
  "author": "mist8kengas",
  "license": "Apache-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/publisher-github": "^6.0.0-beta.64",
    "electron": "^19.0.7",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "update-electron-app": "^2.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/image/icon.ico",
        "name": "AnimeOnsen",
        "asar": true,
        "win32metadata": {
          "ProductName": "AnimeOnsen Desktop",
          "CompanyName": "AnimeOnsen"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "AnimeOnsen",
            "setupExe": "AnimeOnsen_setup.exe",
            "setupIcon": "./assets/image/icon.ico",
            "iconUrl": "https://animeonsen.xyz/favicon.ico",
            "version": "1.0.0"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "AnimeOnsen",
              "name": "app"
            }
          }
        }
      ]
    }
  }
}
